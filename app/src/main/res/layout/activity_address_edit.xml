<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <include layout="@layout/activity_page_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="收件人"
                />

            <EditText
                android:id="@+id/addr_edit_contactperson"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                android:hint="请输入收件人姓名"
                />
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="手机号码"
                />

            <EditText
                android:id="@+id/addr_edit_contactmobile"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                android:hint="请输入手机号码"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="邮编"
                />

            <EditText

                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                android:hint="请输入邮编"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            android:id="@+id/addr_edit_provincial_city_layout"
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="省市区"
                />

            <TextView
                android:id="@+id/addr_edit_provincial_city"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                android:drawableRight="@drawable/icon_arrow_right"
                android:layout_marginRight="8dp"
                android:drawablePadding="5dp"
                android:hint="请选择"
                android:gravity="right|center"
                android:textColor="@color/text_gtay2"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="详细地址"
                />

            <EditText
                android:id="@+id/addr_edit_address"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                android:layout_marginRight="8dp"
                android:maxLines="4"
                android:hint="请输入详细地址"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg_color"/>
        <LinearLayout
            style="@style/edit_style_layout"
            android:gravity="center"
            >
            <CheckBox
                android:id="@+id/addr_edit_isdefault"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/addr_is_defult_ck"
                android:button="@null"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置为默认收货地址"
                android:layout_marginLeft="3dp"
                android:textColor="@color/text_gtay2"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>