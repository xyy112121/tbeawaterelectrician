<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <include layout="@layout/activity_page_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="收件人"
                />

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                />
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="手机号码"
                />

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="邮编"
                />

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            android:id="@+id/addr_edit_provincial_city_layout"
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="省市区"
                />

            <TextView
                android:id="@+id/addr_edit_provincial_city"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                android:drawableRight="@drawable/icon_arrow_right"
                android:layout_marginRight="8dp"
                android:drawablePadding="5dp"
                android:hint="请选择"
                android:gravity="right|center"
                android:textColor="@color/text_gtay2"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:textColor="@color/text_gray"
                android:text="详细地址"
                />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:textSize="16sp"
                android:layout_marginRight="8dp"
                android:maxLines="4"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>