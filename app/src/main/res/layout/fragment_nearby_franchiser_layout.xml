<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">
    <LinearLayout
        android:id="@+id/franchiser_search_condition_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/franchiser_search_condition1_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/franchiser_search_condition1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部类型"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/franchiser_search_condition1_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                android:background="@drawable/icon_arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#BEBEBE" />

        <RelativeLayout
            android:id="@+id/franchiser_search_condition2_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/franchiser_search_condition2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部区域"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/franchiser_search_condition2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                android:background="@drawable/icon_arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#BEBEBE" />

        <RelativeLayout
        android:id="@+id/franchiser_search_condition3_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/franchiser_search_condition3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="认证状态"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/franchiser_search_condition3_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="7dp"
            android:background="@drawable/icon_arrow_down" />
    </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#BEBEBE" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_map_list" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/franchiser_search_condition_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C4C4C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ListView
            android:id="@+id/franchiser_select_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scrollbars="none"
            >
        </ListView>

        <View
            android:id="@+id/franchiser_select_list_search_conditions_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e08B8989"
            android:visibility="gone" />
        <FrameLayout
            android:id="@+id/franchiser_select_list_search_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>