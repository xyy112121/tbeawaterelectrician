<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <include layout="@layout/activity_page_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/activity_old_pwd_layout"
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:text="当前密码   "
                />

            <EditText
                android:id="@+id/pwd_edit_old"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:hint="请输入当前登录密码"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:inputType="numberPassword"/>
        </LinearLayout>
        <View
            android:id="@+id/activity_old_pwd_view"
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:text="新密码   "
                />

            <EditText
                android:id="@+id/pwd_edit_new"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:hint="请设置新密码"
                android:imeOptions="actionNext"
                style="@style/edit_style"
                android:inputType="numberPassword"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <LinearLayout
            style="@style/edit_style_layout">
            <TextView
                style="@style/edit_left_style_tv"
                android:text="确认密码"
                />

            <EditText
                android:id="@+id/pwd_edit_confirm"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.74"
                android:hint="请设置确认密码"
                android:imeOptions="actionDone"
                style="@style/edit_style"
                android:inputType="numberPassword"/>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        </LinearLayout>

    <Button
        android:id="@+id/pwd_edit_finish"
        style="@style/style_next_btn"
        android:text="完成"
        />
</LinearLayout>