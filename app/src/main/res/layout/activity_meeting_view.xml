<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <include layout="@layout/activity_page_top" />
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
        >

           <LinearLayout style="@style/my_text_layout">

               <TextView
                   style="@style/my_text_style"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="会议编号"
                   android:textColor="@color/text_gray" />

               <TextView
                   android:id="@+id/meeting_view_code"
                   style="@style/my_right_text_style1" />
           </LinearLayout>

           <View style="@style/horizontal_view" />

           <LinearLayout style="@style/my_text_layout">

               <TextView
                   style="@style/my_text_style"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="举办时间"
                   android:textColor="@color/text_gray" />

               <TextView
                   android:id="@+id/meeting_view_meetingtime"
                   style="@style/my_right_text_style1" />
           </LinearLayout>

           <View style="@style/horizontal_view" />

           <LinearLayout style="@style/my_text_layout"
               android:layout_height="wrap_content">

               <TextView
                   style="@style/my_text_style"
                   android:layout_width="wrap_content"
                   android:text="举办单位"
                   android:textColor="@color/text_gray" />

               <LinearLayout
                   android:id="@+id/meeting_view_organizecompanylist"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="0.25"
                   android:gravity="center_vertical"
                   android:orientation="vertical">

               </LinearLayout>

           </LinearLayout>

           <View style="@style/horizontal_view" />

           <LinearLayout style="@style/my_text_layout">

               <TextView
                   style="@style/my_text_style"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="举办地点"
                   android:textColor="@color/text_gray" />

               <TextView
                   android:id="@+id/meeting_view_meetingplace"
                   style="@style/my_right_text_style1" />
           </LinearLayout>

           <View
               style="@style/horizontal_view"
               android:layout_height="8dp" />


           <LinearLayout style="@style/my_text_layout">

               <TextView
                   style="@style/my_text_style"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="签到时间"
                   android:textColor="@color/text_gray" />

               <TextView
                   android:id="@+id/meeting_view_checkintime"
                   style="@style/my_right_text_style1"
                   />
           </LinearLayout>

           <LinearLayout style="@style/my_text_layout">

               <TextView
                   style="@style/my_text_style"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="签到地点"
                   android:textColor="@color/text_gray" />

               <TextView
                   android:id="@+id/meeting_view_checkinplace"
                   style="@style/my_right_text_style1" />
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
</LinearLayout>