<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <include layout="@layout/activity_page_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/wallet_withdraw_cash_view_qrcodepicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_my_wallet_tx_success" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="订单受理成功"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="订单编号:"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <View
                style="@style/horizontal_view"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallet_withdraw_cash_bg"
                android:orientation="vertical">

                <LinearLayout style="@style/edit_style_layout">

                    <TextView
                        style="@style/edit_left_style_tv"
                        android:text="订单金额"
                        android:textColor="@color/text_gtay2" />

                    <TextView
                        android:id="@+id/wallet_withdraw_cash_view_distributorinfo_time"
                        style="@style/edit_style"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.74"
                        android:gravity="right|center"
                        android:imeOptions="actionNext"
                        android:text="￥431"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                </LinearLayout>

                <View style="@style/horizontal_view" />

                <LinearLayout style="@style/edit_style_layout">

                    <TextView
                        style="@style/edit_left_style_tv"
                        android:text="支付方式"
                        android:textColor="@color/text_gtay2" />

                    <TextView
                        android:id="@+id/wallet_withdraw_cash_view_distributorinfo_name"
                        style="@style/edit_style"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.74"
                        android:gravity="right|center"
                        android:imeOptions="actionNext"
                        android:text="12ddddddddddd"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View style="@style/horizontal_view" />
            </LinearLayout>

            <Button
                android:id="@+id/wallet_withdraw_cash_view_distributorinfo_finish"
                style="@style/style_next_btn"
                android:text="查看订单详情" />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/go_home"
        android:text="回到首页"
        android:textColor="@color/tab_text_normal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/frame_black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>