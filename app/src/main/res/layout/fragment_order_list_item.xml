<?xml version="1.0" encoding="utf-8"?>
<!-- -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/order_item_ordercompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:text="特变科技公司"
                android:drawableRight="@drawable/icon_arrow_right"
                android:drawablePadding="10dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/order_item_orderstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue1"
                android:textSize="12sp"
                android:text="评价晒单最多可得20积分"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/item_goods_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

     <TextView
         android:id="@+id/order_item_price"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:textColor="@color/text_gtay2"
         android:layout_marginTop="10dp"
         android:text="共一件商品 合计:￥199.00 (含运费￥0.00)"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="right">
            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="再次购买"
                android:textColor="@color/gray"
                android:background="@drawable/register_get_code_bg"
                android:textSize="14sp"
                />
            <Button
                android:id="@+id/login_register_btn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="提醒发货"
                android:textColor="@color/blue1"
                android:background="@drawable/login_register_btn_bg"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:layout_marginRight="10dp"

                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>