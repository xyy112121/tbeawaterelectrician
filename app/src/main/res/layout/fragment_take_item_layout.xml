<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.tbea.tb.tbeawaterelectrician.component.CircleImageView
                android:id="@+id/take_item_picture"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_testpic2" />

            <LinearLayout
                android:id="@+id/take_item_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/take_item_picture"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/take_item_publishername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="李聪"
                    android:textColor="@color/blue3"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/take_item_publisheriscompany"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_take_shop"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_person_attestation"
                    android:id="@+id/take_item_publisherwhetheridentify"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/take_item_publishtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:text="2016-08-08"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/take_item_tasktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="招聘行政文员"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/take_item_taskdistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:drawableLeft="@drawable/icon_nearby_select"
                android:drawablePadding="5dp"
                android:maxEms="6"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="900m"
                android:textColor="@color/bottle_green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/take_item_taskaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="四川 成都 成华区"
                android:textColor="@color/text_gray"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>


    </LinearLayout>
</FrameLayout>