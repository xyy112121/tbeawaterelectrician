<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">
        <include layout="@layout/activity_page_top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定新手机号码"
            android:textColor="@color/text_gtay2"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <LinearLayout
                style="@style/edit_style_layout"
                android:layout_marginRight="5dp">
                <TextView
                    style="@style/edit_left_style_tv"
                    android:text="手机号"
                    />

                <EditText
                    android:id="@+id/new_phone"
                    android:layout_weight="0.8"
                    android:hint="手机号"
                    android:inputType="phone"
                    style="@style/edit_style"
                    android:layout_marginLeft="20dp"
                    />

                <Button
                    android:id="@+id/send_code"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_red_bg"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#9E9E9E" />
            <LinearLayout
               style="@style/edit_style_layout">
                <TextView
                    style="@style/edit_left_style_tv"
                    android:text="验证码"
                   />

                <EditText
                    android:id="@+id/new_code"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.74"
                    android:hint="请输入验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    style="@style/edit_style"/>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/myphone_edit_finish"
            style="@style/style_next_btn"
            android:text="完成"
            />
    </LinearLayout>
</FrameLayout>