<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_page_top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/head_color">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="账户积分"
                />
            <TextView
                android:id="@+id/my_wallet_list_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="2501"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="一个积分等于1元人民币"/>
        </LinearLayout>
        <Button
            android:id="@+id/my_wallet_list_withdraw_cash"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="我要提现"
            android:textColor="@color/white"
            android:background="@drawable/fragmen_my_edit_info"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"

            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/my_wallet_revenue_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#238CDF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/id_tab01_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_my_wallet_revenue"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:text="收入列表"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/my_wallet_revenue_image"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/icon_me_wallet_select" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/my_wallet_pay_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#238CDF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_my_wallet_pay"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:text="支出列表"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/my_wallet_pay_image"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/icon_me_wallet_select"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_wallet_content_layout"></FrameLayout>

</LinearLayout>