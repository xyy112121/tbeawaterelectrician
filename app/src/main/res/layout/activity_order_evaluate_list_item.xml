<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/order_evaluate_commdith_item_picture"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_testpic3"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.75"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_evaluate_commdith_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="铜芯聚焦乙烯绝缘乙烯护套"
                    android:textColor="@color/text_gtay2"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/order_evaluate_commdith_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="评价+晒单最多可得20积分"
                    android:textColor="@color/text_gtay2"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/order_evaluate_item_btn1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="评价晒单"
            android:textColor="@color/blue1"
            android:background="@drawable/login_register_btn_bg"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</FrameLayout>