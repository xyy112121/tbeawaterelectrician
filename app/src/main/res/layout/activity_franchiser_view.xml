<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/activity_page_top"/>
    <include layout="@layout/fragment_nearby_franchiser_item_layout"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:src="@drawable/icon_advertisement"
        android:scaleType="fitXY"/>
    <View
        style="@style/horizontal_view"
        android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/fragment_view_all_goods_layout"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fragment_view_all_goods_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/blue4"
                    />

                <TextView
                    android:id="@+id/fragment_view_all_goods_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部商品"
                    android:textColor="@color/blue4"
                    />
            </LinearLayout>

            <View style="@style/vertical_view"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/fragment_my_report"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fragment_my_report_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工程招标"
                    android:textColor="@color/text_gray"/>
            </LinearLayout>

            <View style="@style/vertical_view"  android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/ll_myfragment_expert_collect"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fragment_my_collect_expert_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招聘信息"
                    android:textColor="@color/text_gray" />
            </LinearLayout>
            <View style="@style/vertical_view"  android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/fragment_view_company_dynamics_layout"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fragment_view_company_dynamics_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/fragment_view_company_dynamics_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司动态"
                    android:textColor="@color/text_gray" />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐"
                android:textColor="@color/text_gray"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"/>
            <View style="@style/vertical_view"  android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"
                android:textColor="@color/text_gray"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_lower_triangle"/>
            <View style="@style/vertical_view"  android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/text_gray"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_lower_triangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <CheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/nearby_franchiser_view_ck"
                android:checked="true"
                android:button="@null"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="只显示促销商品"
                android:textColor="@color/text_gray"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        style="@style/horizontal_view"/>
    <FrameLayout
        android:id="@+id/franchiser_view_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>