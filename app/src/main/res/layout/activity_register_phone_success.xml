<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <include layout="@layout/activity_page_top"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_regiest_done"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="注册成功"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/register_success_comfirm"
            style="@style/style_next_btn"
            android:text="确认"
            android:layout_marginTop="35dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="特别提示:\n为了您账户安全,扫码返利提现需实名认证；也为了方便您能及时的提取现金，请提前准备好相关的证件进行实名认证"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/register_authentucation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/head_color"
                android:text="前往实名认证"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/register_sunccess_cm_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="热线电话：0880-88888"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>




    </LinearLayout>

</FrameLayout>